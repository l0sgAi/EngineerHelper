<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="14dp"
        android:paddingEnd="14dp"
        android:paddingBottom="14dp">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/general_background"
            android:subtitle="新增或修改"
            android:subtitleTextColor="@color/white"
            android:title="产品信息管理"
            android:titleTextColor="@color/white" />

        <ImageView
            android:id="@+id/imageUrl"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_product_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="基本信息"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="名称"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/product_add_or_update_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:hint="产品名称"
            android:inputType="textPersonName"
            android:minLines="1"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="所属客户"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/spinner_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="购买时间"
            android:textSize="17dp" />

        <!-- 年输入框 -->
        <EditText
            android:id="@+id/inputYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="年 (YYYY)"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="年"
            android:textSize="17dp"
            android:gravity="center"/>

        <!-- 月输入框 -->
        <EditText
            android:id="@+id/inputMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="月 (MM)"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="月"
            android:textSize="17dp"
            android:gravity="center"/>

        <!-- 日输入框 -->
        <EditText
            android:id="@+id/inputDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="日 (DD)"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="日"
            android:textSize="17dp"
            android:gravity="center"/>

        <Button
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:id="@+id/submit_product_add_or_update"
            android:background="@drawable/general_background"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>


</ScrollView>